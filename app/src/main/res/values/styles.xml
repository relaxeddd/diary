    <style name="Widget.MyTodoList" parent="@android:style/Widget.Material" />

    <style name="StyleCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="StyleCardViewSettings" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="StyleToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <!--<item name="contentInsetStartWithNavigation">?sessionListKeyline</item>-->
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.MyTodoList.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.MyTodoList.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:fontFamily">todo</item>-->
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Widget.MyTodoList.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.MyTodoList.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TextAppearance.MyTodoList.Tab" parent="@style/TextAppearance.Design.Tab">
        <!--<item name="android:fontFamily">todo</item>-->
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.MyTodoList.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/size_24</item>
    </style>

    <style name="TextAppearance.MyTodoList.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="TextAppearance.MyTodoList.Button" parent="TextAppearance.MaterialComponents.Button">
        <!--<item name="android:fontFamily">todo</item>-->
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="fontFamily">todo</item>-->
    </style>

    <style name="Widget.MyTodoList.EventFilters">
        <!--<item name="android:letterSpacing">TODO</item>-->
        <item name="android:padding">@dimen/size_8</item>
        <!--<item name="android:strokeColor">?colorControlLight</item>-->
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="outlineWidth">1dp</item>
        <item name="clearIcon">@drawable/tag_clear</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="showIcons">true</item>-->
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextAppearance.MyTodoList.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <!--<item name="android:fontFamily">TODO</item>-->
        <item name="android:letterSpacing">0</item>
        <!--<item name="fontFamily">TODO</item>-->
    </style>

    <style name="AlertDialog.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarStyle">@style/AlertDialog.ButtonBar</item>
        <item name="dialogCornerRadius">@dimen/size_8</item>
        <item name="dialogPreferredPadding">@dimen/size_24</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/AlertDialog.TitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent ="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:paddingTop">@dimen/size_8</item>
    </style>

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <!--<item name="android:fontFamily">TODO</item>-->
        <item name="android:textSize">@dimen/font_20</item>
        <!--<item name="fontFamily">TODO</item>-->
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Widget.MyTodoList.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">@dimen/size_8</item>
    </style>

</resources>
